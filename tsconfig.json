{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "types": [
      "request",
      "tough-cookie"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "importHelpers": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@common/*": [
        "common/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@dao/*": [
        "dao/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@validators/*": [
        "validators/*"
      ]
    }
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}